<%- include("../head") %>

<div class="container mt-4">

    <form action="/event/addEvents" method="post">
        <div class="row">
            <div class="input-group col-sm-3 mb-2">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="title">Event title</label>
                </div>
                <input id="title" type="text" class="form-control" name="title" required>
            </div>
        </div>
        <div class="row">
            <div class="input-group col-sm-3 mb-2">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="Date">Date</label>
                </div>
                <input id="Date" type="date" class="form-control" name="eventDate" required>
            </div>
        </div>
        <div class="row">
            <div class="input-group col-sm-3 mb-2">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Main Speaker</label>
                </div>
                <select class="form-control" name="mainSpeaker" id="inputGroupSelect01" required>
                    <% speakers.forEach(speaker => { %>
                        <option value="<%- speaker._id %>"> <%-speaker.firstName%> </option>
                    <% }); %>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="input-group col-sm-3 mb-2">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="Other">Other Speakers</label>
                </div>
                <select id="Other" class="custom-select" name="otherSpeakers" multiple required>
                    <% speakers.forEach(speaker => { %>
                        <option value="<%- speaker._id %>"> <%-speaker.firstName%> </option>
                    <% }); %>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>

<%- include("../scripts") %>
</body>

</html>